<table>
	<thead>
  	<tr>
	    <th>Name</th>
	    <th>Address</th>
	    <th>Phone number</th>
	    <th>Website</th>
	    <th>Tags</th>
			<th>&nbsp;</th>
	  </tr>
	</thead>
	
	<tbody>
	<% @merchants.each do |merchant| %>
	  <tr>
	    <td><%=h merchant.name %></td>
	    <td><%=h merchant.address %></td>
	    <td><%=h merchant.phone_number %></td>
	    <td><%=h merchant.website %></td>
	    <td><%=h merchant.tags %></td>
	    <td><%= link_to 'Show', merchant %> | <%= link_to 'Edit', edit_merchant_path(merchant) %> | <%= link_to 'Destroy', merchant, :confirm => 'Are you sure you want to delete this merchant? You cannot undo this action.', :method => :delete %></td>
	  </tr>
	<% end %>
	</tbody>
</table>

<br />

<%= link_to 'New Merchant', new_merchant_path, :class => 'button positive' %>