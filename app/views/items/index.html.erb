<table>
	<thead>
  	<tr>
	    <th>Name</th>
	    <th>Price</th>
	    <th>Currency</th>
	    <th>Tags</th>
	    <th>Description</th>
	    <th>Rating</th>
			<th>&nbsp;</th>
	  </tr>
	</thead>
	
	<tbody>
	<% @items.each do |item| %>
	  <tr>
	    <td><%=h item.name %></td>
	    <td><%=h item.price %></td>
	    <td><%=h item.currency %></td>
	    <td><%=h item.tags %></td>
	    <td><%=h item.description %></td>
	    <td><%=h item.rating %></td>
	    <td><%= link_to 'Show', item %> | <%= link_to 'Edit', edit_item_path(item) %> | <%= link_to 'Destroy', item, :confirm => 'Are you sure you want to delete this item? You cannot undo this action.', :method => :delete %></td>
	  </tr>
	<% end %>
	</tbody>
</table>

<br />

<%= link_to 'New Item', new_item_path, :class => 'button positive' %>