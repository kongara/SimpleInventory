<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Currency</th>
    <th>Tags</th>
    <th>Description</th>
    <th>Rating</th>
    <th>Number of ratings</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.name %></td>
    <td><%=h item.price %></td>
    <td><%=h item.currency %></td>
    <td><%=h item.tags %></td>
    <td><%=h item.description %></td>
    <td><%=h item.rating %></td>
    <td><%=h item.number_of_ratings %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>